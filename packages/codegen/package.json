{
  "name": "@ic-reactor/codegen",
  "version": "0.4.1",
  "description": "Shared code generation utilities for IC Reactor",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --tsconfig tsconfig.json",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch --tsconfig tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "internet-computer",
    "candid",
    "ic-reactor",
    "codegen",
    "dfinity",
    "icp"
  ],
  "author": "Behrad Deylami",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/B3Pay/ic-reactor.git",
    "directory": "packages/codegen"
  },
  "dependencies": {
    "change-case": "^5.4.4",
    "@ic-reactor/parser": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
