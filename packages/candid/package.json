{
  "name": "@ic-reactor/candid",
  "version": "3.0.15-beta.3",
  "description": "IC Reactor Candid Adapter - Fetch and parse Candid definitions from Internet Computer canisters",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist tsconfig.tsbuildinfo && tsc -b",
    "test": "vitest run",
    "version:sync": "node -e \"const pkg = require('./package.json'); const fs = require('fs'); fs.writeFileSync('./src/version.ts', '/**\\n * Library version - automatically synced from package.json.\\n */\\nexport const VERSION = \\\"' + pkg.version + '\\\"\\n');\"",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/B3Pay/ic-reactor",
    "directory": "packages/candid"
  },
  "bugs": {
    "url": "https://github.com/B3Pay/ic-reactor/issues"
  },
  "homepage": "https://b3pay.github.io/ic-reactor/v3/packages/candid/",
  "keywords": [
    "internet-computer",
    "icp",
    "dfinity",
    "candid",
    "web3",
    "blockchain",
    "canister",
    "actor",
    "reactor"
  ],
  "author": "Behrad Deylami",
  "license": "MIT",
  "dependencies": {
    "@ic-reactor/core": "workspace:^",
    "@noble/hashes": "^2.0.1",
    "zod": "^4.3.5"
  },
  "peerDependencies": {
    "zod": "^4.3.5",
    "@noble/hashes": "^2.0.0",
    "@icp-sdk/core": "^5.0.0"
  },
  "peerDependenciesMeta": {},
  "devDependencies": {
    "@icp-sdk/core": "^5.0.0",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/node": "^25.0.9",
    "size-limit": "^12.0.0",
    "vitest": "^4.0.17"
  },
  "size-limit": [
    {
      "name": "Candid Package",
      "path": "dist/index.js",
      "limit": "30 KB",
      "gzip": true
    }
  ]
}
