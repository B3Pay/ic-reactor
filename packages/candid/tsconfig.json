{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "paths": {
      "sha2": ["./node_modules/@noble/hashes/sha2"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "tests/**/*"]
}
