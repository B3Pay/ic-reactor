{
  "name": "@ic-reactor/parser",
  "version": "0.1.0",
  "description": "A parser for the DFINITY Candid language",
  "files": [
    "dist/*"
  ],
  "main": "dist/web/didjs.js",
  "types": "dist/web/didjs.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:B3Pay/ic-reactor.git"
  },
  "keywords": [
    "actor",
    "react",
    "candid",
    "dfinity",
    "web3",
    "dapp"
  ],
  "author": "b3hr4d",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/b3hr4d/ic-reactor/issues"
  },
  "homepage": "https://github.com/b3hr4d/ic-reactor/tree/main/packages/parser#readme",
  "scripts": {
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest",
    "build": "yarn clean && yarn build:web && yarn build:node && yarn build:bundler",
    "build:web": "npx wasm-pack build --release --target web --out-dir dist/web",
    "build:node": "npx wasm-pack build --release --target nodejs --out-dir dist/node",
    "build:bundler": "npx wasm-pack build --release --target bundler --out-dir dist/bundler",
    "start": "tsc watch",
    "clean": "npx rimraf dist"
  },
  "engines": {
    "node": ">=10"
  }
}
