{
  "name": "@ic-reactor/parser",
  "version": "0.4.6",
  "description": "A parser for the DFINITY Candid language",
  "sideEffects": false,
  "files": [
    "dist/web/*",
    "dist/nodejs/*",
    "dist/bundler/*"
  ],
  "main": "dist/nodejs/index.js",
  "module": "dist/web/index.js",
  "types": "dist/web/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/web/index.js",
      "node": "./dist/nodejs/index.js",
      "workerd": "./dist/web/index.js",
      "import": "./dist/nodejs/index.js",
      "require": "./dist/nodejs/index.js",
      "default": "./dist/web/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:B3Pay/ic-reactor.git"
  },
  "keywords": [
    "internet-computer",
    "icp",
    "dfinity",
    "candid",
    "parser",
    "actor",
    "react",
    "web3",
    "dapp",
    "wasm"
  ],
  "author": "b3hr4d",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/b3hr4d/ic-reactor/issues"
  },
  "homepage": "https://github.com/b3hr4d/ic-reactor/tree/main/packages/parser#readme",
  "scripts": {
    "build": "npm run clean && npm run build:web && npm run build:node && npm run build:bundler",
    "build:web": "wasm-pack build --release --target web --out-dir dist/web --out-name index",
    "build:node": "wasm-pack build --release --target nodejs --out-dir dist/nodejs --out-name index",
    "build:bundler": "wasm-pack build --release --target bundler --out-dir dist/bundler --out-name index",
    "start": "tsc --watch",
    "test": "vitest run",
    "clean": "rm -rf dist tsconfig.tsbuildinfo && tsc -b",
    "size": "size-limit",
    "analyze": "size-limit"
  },
  "devDependencies": {
    "@ic-reactor/core": "workspace:*",
    "@ic-reactor/candid": "workspace:*",
    "@tanstack/query-core": "^5.90.20",
    "@types/node": "^25.2.3",
    "vitest": "^4.0.18",
    "wasm-pack": "^0.14.0",
    "@icp-sdk/core": "^5.0.0",
    "@icp-sdk/auth": "^5.0.0",
    "@size-limit/preset-small-lib": "^12.0.0",
    "size-limit": "^12.0.0"
  },
  "size-limit": [
    {
      "name": "Parser (web)",
      "path": "dist/web/index.js",
      "limit": "200 KB",
      "gzip": true
    }
  ],
  "gitHead": "36e43368cb0fa3bffa9aa40dfd589046c1c3b5fe"
}
