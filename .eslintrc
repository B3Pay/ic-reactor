{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier", "jest"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "semi": "off",
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": false,
        "semi": false,
        "trailingComma": "es5",
        "tabWidth": 2
      },
      {
        "usePrettierrc": true
      }
    ],
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_" }
    ],
    "no-console": 1
  },
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  }
}
