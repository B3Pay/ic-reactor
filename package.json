{
  "name": "ic-reactor-v3",
  "version": "3.0.0",
  "description": "The modern, type-safe library for building Internet Computer applications",
  "main": "index.js",
  "scripts": {
    "build": "pnpm -r --filter \"./packages/**\" build",
    "test": "pnpm -r --filter \"./packages/**\" test",
    "test-e2e": "cd e2e && sh ./test.sh",
    "docs:build": "cd docs && pnpm build",
    "docs:preview": "cd docs && pnpm preview",
    "size": "pnpm -r --filter \"./packages/**\" run size",
    "size:analyze": "pnpm -r --filter \"./packages/**\" run analyze",
    "prepublish:check": "pnpm run build && pnpm run test && pnpm run size",
    "pack:check": "pnpm -r --filter \"./packages/**\" exec npm pack --dry-run",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,scss,html}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,scss,html}\"",
    "format:staged": "pnpm -r --filter './packages/**' exec prettier --write",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,mdx,css,scss,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "internet-computer",
    "dfinity",
    "icp",
    "react",
    "typescript",
    "tanstack-query"
  ],
  "author": "Behrad Deylami",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  }
}
