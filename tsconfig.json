{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "moduleResolution": "Node",
    "jsx": "react",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "**/*.spec.ts",
    "examples",
    ".next",
    "dist",
    "test",
    "out",
    "node_modules"
  ]
}
